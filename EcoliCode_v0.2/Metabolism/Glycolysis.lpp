// Glycolysis

from MetaboliteConcentrations import *;

import MetaboliteConcentrations;
import EcoliInfo;

float MinNADPlusConc = MetaboliteConcentrations.NAD / 10.0;
float MinATPConc = 0.1 mM;

pathway Glycolysis(G6P + 2 ATP + 2 NAD -> 2 pyruvate + 2 ADP + 2 NADH)
specification
{

    if (NAD <= MinNADPlusConc)
    {
        ATP' = 0;
    }
    else
    {
        if (ATP > MinATPConc)
        {
            ATP' = ADP / ATP * EcoliInfo.EGM_Glycolysis_Sec;
        }
        else
        {
            ATP' = ADP / MinATPConc * EcoliInfo.EGM_Glycolysis_Sec;
        }
    }
}

G6P[:] = MetaboliteConcentrations.G6P;