// NAD, NADP Synthesis

reaction NAD+Synthesis(nicotinamide + PRPP + 2 ATP -> NAD+)
{
    float cn = 0.01M;
    NAD+'  = min(nicotinamide, PRPP, ATP / 2, (NADH / NAD+) * cn); // NADH not from the overall reaction
}

reaction NADP+Synthesis(NAD+ + ATP -> NADP+ + ADP)
{
    float cnp = 0.01M;
    NAD+'  = min(NAD+, ATP, (NADPH / NADP+) * cnp); // NADPH not from the overall reaction
}

