// Divisome

import MinCDE;

MinC = MinCDE.MinCDE.MinC;

protein FtsA, FtsZ;

complex ZRing
{
    ZRing = FtsA~(FtsZ_{n});
    reaction FtsZ_MembraneRecruitment(FtsA~(FtsZ_{n}) + FtsZ{in} -> FtsA~(FtsZ_{n+1})) // (n can be 0, as well)
    k_function
    {
        return FtsA / max(1, MinCDE.MinCDE.MinC{in});
    }
    krev_function
    {
        return 0.5 + MinCDE.MinCDE.MinC;
    }
    reaction FtsZ_Crosslinking(FtsA~(FtsZ_{n}){n} + FtsA~(FtsZ_{m}){1} -> (FtsA~(FtsZ_{n}){n})~(FtsA~(FtsZ_{m}){1}), r=1);
    reaction FtsZ_Treadmilling((FtsA~(FtsZ_{n}){i})~(FtsA~(FtsZ_{m}){j}) -> (FtsA~(FtsZ_{n}){i-1})~(FtsA~(FtsZ_{m}){j+1}), r=1);
}

