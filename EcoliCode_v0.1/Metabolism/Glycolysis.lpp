// Glycolysis

reaction Glycolysis(G6P + 2 ADP + 2 NAD -> 2 pyruvate + 2 NADH + 2 ATP)
specification
{
    float cg = 0.019M;
    ATP'  = (ADP / ATP) * cg;
    ADP'  = - ATP';
    NADH' = ATP';
    NAD' = - NADH';
    G6P'  = - ATP' / 2;
    pyruvate' = G6P' * 2;
}

G6P[:] = 8.8mM;
ATP = 9.6mM;
ADP = 0.56mM;
NADH = 8.3mM;
NAD = 2.6mM;
pyruvate = 0.39mM;
