// Flagellar Rotation

membrane Membrane;

// CP
reaction FlagellarRotation(Membrane, bRun) // bRun is a boolean parameter
specification
{
    Ang = Membrane.phi;
    Pos = Membrane.position;

    cdist = 10nm/s; // constant for displacement
    crot = rand(0, 2 * pi); // constant for rotation

    if (bRun)
    {
        Pos' = cdist;
        Ang' = 0;
    }
    else 
    {
        Pos' = cdist / 3;
        Ang' = crot;
    }
}
