import Ribosome;

pathway Translation
{
    Ribosome.30S = 10nM;
    Ribosome.50S = 10nM;

    // Step 1. Initiation: see Ribosome
    // 
    set<reaction> initiation
    {
        Ribosome.30S_PIC.PICassembly,
        Ribosome.30S_PIC.InitiatortRNAloading,
        Ribosome.30S_IC.complexation,  // default single reaction name for complex   
        Ribosome.70S_PIC.complexation, // default single reaction name for complex   
        Ribosome.70S_IC.GTPhydrolysis 
    }
    
    // Step 2. Elongation: see Ribosome
    // 
    set<reaction> elongation
    {

    }

    // Step 3. Termination: see Ribosome
    // 
    set<reaction> termination 
    {

    }
}

