from tRNA import tRNA

pathway Translation
{
    // Step 1: Ribosomal complex attaching to mRNA:
    reaction Initiation(30S + 70S + GTP + mRNA --> activeRibosome_mRNA_{0})

    // Step 2: utilize charged tRNA to build nascent polypeptide
    reaction Elongation(activeRibosome_mRNA_{i} + nascentPolypeptide_{j} + {tRNA_{charged}} --> activeRibosome_mRNA_{i+3} + nascentPolypeptide_{j+1} + {tRNA}) 

    // Step 3: Termination
    reaction Termination(activeRibosome_mRNA_{i} + nascentPolypeptide_{j} --> 30S + 70S + mRNA + <proteinID>)
}

