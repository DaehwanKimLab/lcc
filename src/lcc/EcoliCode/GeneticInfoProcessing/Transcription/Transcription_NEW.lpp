// Transcription

pathway Transcription 
{
    dna TranscriptionStartSite(ATG);
    dna Promoter = gene.range_bp(-35, -10);  // temporary
    group<dna> StopCodons{TAA, TAG, TGA}; // temporary

    protein RpoB, RpoC, RpoA, RpoZ; // RNAP subunits
    sigma_factor RpoD, FecI, RpoE, RpoF, RpoH, RpoS, RpoN; // sigma factors
    
    polymerase RNAPCore() // temporary termination mechanism
    {
        initiation  TranscriptionStartSite;
        elongation  rna_{n} + nt --> rna_{n+1} + ppi, 60 nt/s;
        termination StopCodons;
        
        complex     RpoB + RpoC + RpoA + RpoZ, Kd=1e-10;   // beta, beta', alpha, omega (core becomes holoenzyme with sigma)
        domain      SigmaFactorBinding
        {
            bind    sigma_factor; // no kinetic constant given here
        }
    }
    
    complex RNAPHolo(RNAPCore + sigma_factor + Promoter, Kd=1e-10;); // promoter (-35~-10 bp of each gene) understood by the compiler
}
