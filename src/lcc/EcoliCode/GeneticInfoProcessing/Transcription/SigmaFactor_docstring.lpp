// sigma19, ferric citrate sigma factor for iron transport and metabolism
sigmafactor FecI(ds(GGAAATNNNN NNNNNNNNNN NNNTCNNNNN), Kd=1e-15); /* RefID1 */

// sigma70, housekeeping, –10 (TATAAT) and –35 (TTGACA)
sigmafactor RpoD(ds(TTGACANNNN NNNNNNNNNN NNNTATAATN), Kd=1e-15); /* RefID1 */

// sigma24, extreme heat stress response and extracellular proteins
sigmafactor RpoE(ds(GAACTTNNNN NNNNNNNNNN NNTCTGANNN), Kd=1e-15); /* RefID1 */

// sigma28 (or FliA), flagellar synthesis and chemotaxis
sigmafactor RpoF(ds(TAAANNNNNN NNNNNNNNNG CCGATAANNN), Kd=1e-15); /* RefID1 */

// sigma32, heat shock
sigmafactor RpoH(ds(CTTGAANNNN NNNNNNNNNN CCCCATNTNN), Kd=1e-15); /* RefID1 */

// sigma38, starvation phase
sigmafactor RpoS(ds(TTGACANNNN NNNNNNNNTG TGCTATACTN), Kd=1e-15); /* RefID1 */

// sigma54, nitrogen-limitation
sigmafactor RpoN(ds(CTGGCACNNN NNTTGCANNN NNNNNNNNNN), Kd=1e-15); /* RefID1 */

// Standard Concentrations of Sigma Factors
FecI = 1nM; /* SigFactConc */
RpoD = 5nM, RpoE = 1nM, RpoF = 5nM, RpoH = 5nM, RpoS = 1nM, RpoN = 1nM; /* SigFactConc */
