// https://doi.org/10.1146/annurev-biochem-060815-014844

import RNAP

RNA rut(NNNNNNNNNN NNNC); // Rho utilization site, unstructured and ribosome-free C-rich and G-poor nascent RNA, of at least 70–80 nt, with regularly spaced cytosines
protein Rho; // homohexameric RecA-family helicase Rho
// protein NusG; // negative regulator of Rho

complex RC // Rho complex
{
    complex c(6 Rho, Kd=1e-10);
    bind b(rut^n);
}

complex RC_RNA // walks along RNA to pull RNA out of RNAP
{
    complex c(RC + rut^n, Kd=1e-7);
    regulate r(RNAP.RNAPCore.DNAbinding.b.Kd = 1); // low level mechanism
}

reaction RC_procession(RC_RNA@RNA_{n} + ATP --> RC_RNA@RNA_{n+1} + ADP + pi, r=100); // RC_rut procession
