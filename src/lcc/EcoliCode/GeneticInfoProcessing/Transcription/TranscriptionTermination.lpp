complex RNAPCore = RNAPolymerase.RNAPCore;
group<dna> StopCodon(TAA, TAG, TGA); // temporary

pathway TranscriptionTermination
{
    if (RNAPCore.read() = any(StopCodon)) // .read syntax for a template-based polymerase 
    {
        RNAPCore.dissociate(); // dissociate from everything it is associated with
    }

