// New Syntax
// @: location
// |: binding

from SigmaFactor import sigmafactor

pathway Transcription
{
    reaction initiation(RNAP + sigmafactor + promoter --> RNAPCore|RNA@promoter + sigmafactor);
    reaction elongation(RNAPCore|RNA@{n} + NTP --> RNAPCore|RNA@{n+1} + NDP);
    reaction termination(RNAPCore|RNA@terminator --> RNAP + RNA);
}
